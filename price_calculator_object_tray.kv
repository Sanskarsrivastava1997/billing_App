        Label:
            canvas:
                Color:
                    rgb :.3,.3,.3,.5
                Rectangle:
                    pos:self.pos
                    size:self.size
            size_hint_x:None
            size:2,0
        Label:
            canvas:
                Color:
                    rgb :1,1,1,1
                Rectangle:
                    pos:self.pos
                    size:self.size
            size_hint_x:None
            size:1,0

        Button:
            id:bt1
            text:"+"
